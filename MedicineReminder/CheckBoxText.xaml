<UserControl x:Class="MedicineReminder.CheckBoxText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedicineReminder"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="tb" Grid.Column="0" Text="{Binding Text, ElementName=root}" FontSize="18" HorizontalAlignment="Center" />
        <CheckBox x:Name="check" Grid.Column="1" IsChecked="{Binding IsChecked, ElementName=root}" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</UserControl>
